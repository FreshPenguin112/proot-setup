# Install tigervnc ,xfce4
sudo apt install tigervnc-standalone-server
sudo apt install xfce4
sudo apt-get install sudo wget nano inetutils-tools dialog
sudo apt-get install xfce4 xfce4-goodies xfce4-terminal exo-utils --no-install-recommends

# Theme

sudo apt install tango-icon-theme

sudo update-icon-caches /usr/share/icons/*

# tweak tool to select theme

sudo apt-get install gnome-tweak

# add adwaita-dark theme variant

sudo apt-get install gnome-themes-extra

# Vnc

nano /usr/local/bin/vncserver-start

vncserver -name remote-desktop -geometry 960x540 :1

vncserver -name remote-desktop -geometry 960x540 -localhost no :1

chmod +x /usr/local/bin/vncserver-start

nano /usr/local/bin/vncserver-stop

vncserver -kill :1
rm -rf /root/.vnc/localhost:1.pid
rm -rf /tmp/.X1-lock
rm -rf /tmp/.X11-unix/X1

chmod +x /usr/local/bin/vncserver-stop

# Start Vnc server
vncserver :1

# Stop Vnc server
vncserver -kill :1

# Display
export DISPLAY=:1

# Vnc config
nano ~/.vnc/vnc.conf
$geometry = "960x540"
$localhost = "yes"

# Xstartup 
nano ~/.vnc/xstartup

#!/bin/bash
[ -r $HOME/.Xresources ] && xrdb $HOME/.Xresources
export PULSE_SERVER=127.0.0.1
XAUTHORITY=$HOME/.Xauthority
export XAUTHORITY                                      >
LANG=en_US.UTF-8
export LANG
echo $$ > /tmp/xsession.pid
dbus-launch --exit-with-session startxfce4 &

#!/bin/bash
xrdb $HOME/.Xresources
startxfce4

chmod +x ~/.vnc/xstartup

# Auto start vncserver
nano .bashrc
vncserver :1

# Auto Kill vncserver
nano .bash_logout
vncserver -kill :1
